<div class="edit-booking-page">
  <div class="edit-booking-container">   
    <!-- Edit Form -->
    <h1 class="edit-booking-header">Add Booking</h1>  
    <form class="edit-booking-form" action="/admin-add-booking" method="POST">
        <!-- Name -->
        <div class="edit-booking-item">
          <label class="edit-booking-label" for="firstName">Full Name:</label>
            <div class="mini-container">
                <input class="edit-booking-input" type="text" id="firstName" name="firstName" required placeholder="First">
                <input class="edit-booking-input" type="text" id="lastName" name="lastName" required placeholder="Last">
            </div><br>
        </div>
        <!-- Room Type -->
        <div class="edit-booking-item" id = "roomTypes">
          <label class="edit-booking-label" for="roomType">Room Type/s & Number:</label>
          <div class="room-type-row">
          <select class="edit-booking-select" id="roomType" name="roomType[]" required>
              <option value="Deluxe Queen">Deluxe Queen</option>
              <option value="Deluxe Twin">Deluxe Twin</option>
              <option value="Premiere">Premiere</option>
              <option value="Dormitory">Dormitory</option>
          </select>
          <div style="width: 10px">   </div>
          <input
              class="edit-booking-input"
              type="text"
              id="roomNum"
              name="roomNum[]"
              placeholder="Enter room number (e.g., A101)"
              required>
          <button type="button" class="small-btn" id="addRoomBtn">+</button></div>
        </div><br><br>
        <!-- Adult Pax -->
        <div class="edit-booking-item"> 
          <label class="edit-booking-label" for="adultPax">Number of Adults:</label>
          <input class="edit-booking-input" type="number" id="adultPax" name="adultPax" min="1" placeholder="Enter number of adults" required><br><br>
        </div>
        <!-- Kid Pax -->
        <div class="edit-booking-item"> 
          <label class="edit-booking-label" for="kidPax">Number of Kids:</label>
          <input class="edit-booking-input" type="number" id="kidPax" name="kidPax" min="0" placeholder="Enter number of kids" required><br><br>
        </div>
        <!-- Check In -->
        <div class="edit-booking-item">
          <label class="edit-booking-label" for="checkIn">Check-In Date:</label>
          <input class="edit-booking-input" type="date" id="checkInDate" name="checkInDate" required><br><br>
        </div>
        <div class="edit-booking-item">
          <label class="edit-booking-label" for="checkInTime">Check-In Time:</label>
          <input class="edit-booking-input" type="time" id="checkInTime" name="checkInTime" required><br><br>
        </div>
        <!-- Check Out-->
        <div class="edit-booking-item">
          <label class="edit-booking-label" for="checkOut">Check-Out Date:</label>
          <input class="edit-booking-input" type="date" id="checkOutDate" name="checkOutDate" required><br><br>
        </div>
        <div class="edit-booking-item"> 
          <label class="edit-booking-label" for="checkOutTime">Check-Out Time:</label>
          <input class="edit-booking-input" type="time" id="checkOutTime" name="checkOutTime" required><br>
        </div>
        <div class="edit-booking-item">
          <label class="edit-booking-label" for="specialRequest">Special Request:</label>
          <textarea class="edit-booking-input" id="specialRequest" name="specialRequest" rows="4" placeholder="Enter special requests..."></textarea>
        </div>
        <div class="edit-booking-buttons">
          <button class="edit-booking-button save-button" type="submit">Add Booking</button>
        </div>
    </form>
  </div>
</div>
<script>
  const addRoomBtn = document.getElementById('addRoomBtn');
  const roomTypes = document.getElementById('roomTypes');

  addRoomBtn.addEventListener('click', () => {
    const newRow = document.createElement('div');
    newRow.className = 'room-type-row';
    newRow.innerHTML = `
      <select name="roomType[]" class="edit-booking-select">
        <option value="Deluxe Queen">Deluxe Queen</option>
        <option value="Deluxe Twin">Deluxe Twin</option>
        <option value="Premiere">Premiere</option>
        <option value="Dormitory">Dormitory</option>
      </select>
          <div style="width: 10px">   </div>
          <input
              class="edit-booking-input"
              type="text"
              id="roomNum"
              name="roomNum[]"
              placeholder="Enter room number (e.g., A101)"
              required>
      <button type="button" id="removeRoomBtn" class="small-btn">-</button>
    `;
    roomTypes.appendChild(newRow);

    // Add event listener to the remove button
    const removeRoomBtn = newRow.querySelector('#removeRoomBtn');
    removeRoomBtn.addEventListener('click', () => {
      newRow.remove();
    });
  });
</script>
