<form method="POST" action="/admin-add-booking" style="display: flex; flex-direction: column; gap: 15px; max-width: 400px; margin: 0 auto;">
    <!-- First Name -->
    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" placeholder="Enter first name" required>

    <!-- Last Name -->
    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" placeholder="Enter last name" required>

    <!-- Room Type -->
    <label for="roomType">Room Type:</label>
    <select id="roomType" name="roomType" required>
        <option value="Deluxe Queen">Deluxe Queen</option>
        <option value="Deluxe Twin">Deluxe Twin</option>
        <option value="Premiere">Premiere</option>
        <option value="Dormitory">Dormitory</option>
    </select>

    <!-- Number of Adults -->
    <label for="adultPax">Number of Adults:</label>
    <input type="number" id="adultPax" name="adultPax" min="1" placeholder="Enter number of adults" required>

    <!-- Number of Kids -->
    <label for="kidPax">Number of Kids:</label>
    <input type="number" id="kidPax" name="kidPax" min="0" placeholder="Enter number of kids" required>

    <!-- Check-In Date and Time -->
    <label for="checkIn">Check-In Date:</label>
    <input type="date" id="checkInDate" name="checkInDate" required>
    <label for="checkInTime">Check-In Time:</label>
    <input type="time" id="checkInTime" name="checkInTime" required>

    <!-- Check-Out Date and Time -->
    <label for="checkOut">Check-Out Date:</label>
    <input type="date" id="checkOutDate" name="checkOutDate" required>
    <label for="checkOutTime">Check-Out Time:</label>
    <input type="time" id="checkOutTime" name="checkOutTime" required>

    <!-- Submit Button -->
    <button type="submit" style="margin-top: 20px;">Add Booking</button>
</form>
