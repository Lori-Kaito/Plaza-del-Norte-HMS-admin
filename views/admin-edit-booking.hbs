<div style="max-width: 600px; margin: 0 auto;">
    <!-- Original Information Section -->
    <h2>Original Booking Information</h2>
    <p><strong>Guest Name:</strong> {{booking.guestName}}</p>
    <p><strong>Room Type:</strong> {{booking.roomType}}</p>
    <p><strong>Room Number:</strong> {{booking.roomNum}}</p>
    <p><strong>Check-In:</strong> {{booking.checkIn}}</p>
    <p><strong>Check-Out:</strong> {{booking.checkOut}}</p>
    <p><strong>Number of Adults:</strong> {{booking.adultPax}}</p>
    <p><strong>Number of Kids:</strong> {{booking.kidPax}}</p>
    
    <hr>

<h1>Edit Booking</h1>
<!-- Edit Form -->
    <form method="POST" action="/admin-edit-booking/{{booking._id}}">
        <label for="guestName">Guest Name:</label>
        <input type="text" id="guestName" name="guestName" value="{{booking.guestName}}" required>

        <label for="roomType">Room Type:</label>
        <select id="roomType" name="roomType" required>
            <option value="DQ" {{#ifEquals booking.roomType "Deluxe Queen"}}selected{{/ifEquals}}>Deluxe Queen</option>
            <option value="DT" {{#ifEquals booking.roomType "Deluxe Twin"}}selected{{/ifEquals}}>Deluxe Twin</option>
            <option value="PRMR" {{#ifEquals booking.roomType "Premiere"}}selected{{/ifEquals}}>Premiere</option>
            <option value="DORM" {{#ifEquals booking.roomType "Dormitory"}}selected{{/ifEquals}}>Dormitory</option>
        </select>

        <label for="roomNum">Room Number:</label>
        <input type="text" id="roomNum" name="roomNum" value="{{booking.roomNum}}" required>

        <label for="checkIn">Check-In:</label>
        <input type="datetime-local" id="checkIn" name="checkIn" value="{{booking.checkIn}}" required>

        <label for="checkOut">Check-Out:</label>
        <input type="datetime-local" id="checkOut" name="checkOut" value="{{booking.checkOut}}" required>

        <label for="adultPax">Number of Adults:</label>
        <input type="number" id="adultPax" name="adultPax" value="{{booking.adultPax}}" min="1" required>

        <label for="kidPax">Number of Kids:</label>
        <input type="number" id="kidPax" name="kidPax" value="{{booking.kidPax}}" min="0" required>

        <button type="submit">Save Changes</button>
    </form>
